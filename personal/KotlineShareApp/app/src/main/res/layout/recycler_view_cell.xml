<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
                android:layout_margin="10dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_weight="5"
                        android:id="@+id/item_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/file_sharing"/>
                <View android:layout_width="0.5dp"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp"
                      android:background="@color/gray"
                      android:layout_height="match_parent"/>
                <LinearLayout
                        android:layout_weight="8"
                        android:paddingStart="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_vertical_margin"
                        android:paddingEnd="8dp"
                        android:paddingRight="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:layout_weight="2"
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:text="@string/app_name"
                            android:textSize="22sp"/>

                    <LinearLayout
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical">
                        <TextView
                                android:singleLine="false"
                                android:lines="4"
                                android:padding="5dp"
                                android:background="@drawable/recyclerview_border"
                                android:layout_marginTop="5dp"
                                android:id="@+id/subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-light"
                                android:maxLines="1"
                                android:text="Measurements"
                                android:textSize="16sp"
                                android:layout_weight="1"/>
                        <TextView android:layout_width="match_parent"
                                  android:id="@+id/no_reports"
                                  android:textColor="@color/red"
                                  android:text="No of reports "
                                  android:fontFamily="sans-serif-light"
                                  android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:layout_height="30dp">

                        <View android:layout_width="1dp"
                              android:layout_marginLeft="40dp"
                              android:background="#ccc"
                              android:layout_marginTop="2dp"
                              android:layout_marginBottom="2dp"
                              android:layout_height="match_parent"/>
                        <ImageView android:layout_width="40dp"
                                   android:src="@drawable/heart"
                                   android:padding="5dp"
                                   android:layout_height="30dp"/>
                        <View android:layout_width="1dp"
                              android:background="#ccc"
                              android:layout_marginTop="2dp"
                              android:layout_marginBottom="2dp"
                              android:layout_height="match_parent"/>
                        <ImageView android:layout_width="40dp"
                                   android:src="@drawable/bell"
                                   android:padding="4dp"
                                   android:layout_height="30dp"/>
                        <View android:layout_width="1dp"
                              android:background="#ccc"
                              android:layout_marginTop="2dp"
                              android:layout_marginBottom="2dp"
                              android:layout_height="match_parent"/>
                        <ImageView android:layout_width="60dp"
                                   android:padding="5dp"
                                   android:layout_weight="1"
                                   android:clickable="true"
                                   android:id="@+id/iv_more"
                                   android:src="@drawable/more"
                                   android:layout_height="30dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout

                android:layout_width="match_parent"
                android:id="@+id/exp_products"
                android:groupIndicator="@null"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    android:clickable="true"
                    android:visibility="gone"
                    android:id="@+id/hidden_item"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/btn_remove"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:src="@drawable/garbage"/>

                        <TextView
                                android:fontFamily="sans-serif-light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remove Report"/>
                    </LinearLayout>
                    <View android:layout_width="1dp"
                          android:background="#ccc"
                          android:layout_marginTop="5dp"
                          android:layout_marginBottom="5dp"
                          android:layout_height="match_parent"/>
                    <LinearLayout
                            android:id="@+id/btn_seen"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:src="@drawable/eye"/>

                        <TextView
                                android:fontFamily="sans-serif-light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ignore"/>
                    </LinearLayout>
                    <View android:layout_width="1dp"
                          android:background="#ccc"
                          android:layout_marginTop="5dp"
                          android:layout_marginBottom="5dp"
                          android:layout_height="match_parent"/>
                    <LinearLayout
                            android:id="@+id/btn_more"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_more_black_24dp"/>

                        <TextView
                                android:fontFamily="sans-serif-light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detail"/>
                    </LinearLayout>
                    <View android:layout_width="1dp"
                          android:background="#ccc"
                          android:layout_marginTop="5dp"
                          android:layout_marginBottom="5dp"
                          android:layout_height="match_parent"/>
                    <LinearLayout
                            android:id="@+id/btn_delete"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_delete_forever_black_24dp"/>

                        <TextView
                                android:fontFamily="sans-serif-light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delete File"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>