<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/grad"
                                                   tools:context=".Splash.SplashFragment1">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_begin="80dp"
                                                android:id="@+id/horizontal_guideline1"
                                                android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintTop_toBottomOf="@+id/horizontal_guideline1"
            android:layout_width="220dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/imagecurve"
            android:id="@+id/iv_fragment1_header"
            android:layout_height="220dp"/>
    <TextView android:layout_width="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/iv_fragment1_header"
              android:id="@+id/tv_fragment1"
              android:text="Track what matters"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_gravity="center_horizontal|bottom"
              android:fontFamily="cursive"
              android:textSize="25dp"
              android:textStyle="bold"
              android:layout_height="wrap_content" android:layout_marginTop="70dp"
              app:layout_constraintHorizontal_bias="0.454"/>
    <TextView android:layout_width="305dp"
              app:layout_constraintTop_toBottomOf="@id/tv_fragment1"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:id="@+id/tv_fragment1_description"
              android:layout_gravity="center_horizontal|bottom"
              android:fontFamily="sans-serif-light"
              android:textAlignment="center"
              android:text="@string/sharing_text"
              android:layout_height="127dp" android:layout_marginTop="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>